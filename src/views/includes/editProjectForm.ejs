<form action="/api/v1/project/put" method="POST">
  <input type="hidden" name="_csrf" value=<%= csrfToken %>>
  <input type="hidden" name="username" value=<%= user.username %>>
  <input type="hidden" name="id" value=<%= project.id %>>

  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="title" value=<%= project.title %>>
  </div>

  <div class="form-group">
    <label>Zip Code</label>
    <input type="postal" class="form-control" name="zip_code" value=<%= project.zip_code %>>
  </div>

  <div class="form-group">
    <label>Cost</label>
    <input type="number" min="0.00" step="0.01" class="form-control" name="cost" value=<%= project.cost %>>
  </div>

  <div class="form-group">
    <label>Deadline</label>
    <input type="date" class="form-control" name="deadline" value=<%= project.deadline %>>
  </div>

  <br>
  <div class="form-group form-check form-switch">
    <label>Done</label>
    <input type="checkbox" class="form-control form-check-input" name="done" <%= project.done ? "checked" : "" %>>
  </div>

  <button type="submit" class="btn greenBtn">Save</button>

</form>
