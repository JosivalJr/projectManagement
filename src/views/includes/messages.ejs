<% if (errors.length > 0) { %>
    <div class="row">
        <div class="col my-2">
            <div class="alert alert-danger">
                <% errors.forEach(message => { %>
                    <%= message %><br>
                <% }); %>
            </div>
        </div>
    </div>
<% } %>

<% if (success.length > 0) { %>
    <div class="row">
        <div class="col my-2">
            <div class="alert alert-success">
                <% success.forEach(message => { %>
                    <%= message %><br>
                <% }); %>
            </div>
        </div>
    </div>
<% } %>