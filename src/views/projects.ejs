<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
    <link rel="stylesheet" href="/css/template.css">
    <link rel="stylesheet" href="/css/formPattern.css">
    <link rel="stylesheet" href="/css/projects.css">
    <title>Projects Management</title>
</head>
<body>
  <%- include('includes/nav') %>
  
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
  
      <div class="col-lg-8 my-3">
        <h1>Projects</h1>
      </div>

      <%- include('includes/messages') %>

      <% if(projects.length > 0) { %>
        <div class="responsive-table">
          <table class="table my-3">
            <tr>
              <th>Project</th>
              <th>Locale</th>
              <th>Cost</th>
              <th>Deadline</th>
              <th>Status</th>
              <th></th>
              <th></th>
            </tr>
            <% projects.forEach(project => { %>
            <tr>
              <td><%= project.title %></td>
              <td><%= project.postal_code %></td>
              <td><%= project.cost %></td>
              <td><%= project.deadline %></td>
              <td><%= project.done %></td>
              <td><a href="/dashboard/projects/project/<%= project.id %>"><button class="btn btn-light">Edit</button></a></td>
              <td><a href="/api/v1/projects/delete/<%= project.id %>"><button class="btn btn-outline-danger">Delete</button></a></td>
  
            </tr>
            <% }); %>
          </table>
        </div>
        <% } else { %>
          <p class="text-center lead"> There aren't projects registered under your username.</p>
        <% } %>
      
      <div class="col-lg-2"></div>
    </div>
    <div class="createBtn">
      <a href="/dashboard/projects/project/create"><button class="btn btn-light"> New Project</button></a>
    </div>
  </div>
  
  <footer>
    <div>
      <a href="/dashboard/projects"><button class="btn btn-light">Return</button></a>
    </div>
  </footer>
  
</body>

</html>